<div class="flex justify-center items-center min-h-screen">
  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl mb-4">Set a new Reminder</h1>

    <%= form_with(model: @reminder_path, local: true) do |f| %>
      <div class="mb-4">
        <%= f.label :date, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.datetime_field :date, class: 'form-control' %>
      </div>

      <div class="mb-4">
        <%= f.label :subject, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.text_field :subject, class: 'form-control', style: 'border: 1px solid #ccc; padding: 8px; width: 100%;' %>
      </div>
        <div class="mb-4">
          <%= f.label :Description, class: "block text-gray-700 font-bold mb-2"  %>
          <%= f.text_area :description, class: 'form-control', style: 'border: 1px solid #ccc; padding: 8px; width: 100%;' %>
        </div>

         <div class="mb-4">
          <%= f.label :Email, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.text_area :email, class: 'form-control', style: 'border: 1px solid #ccc; padding: 8px; width: 100%;' %>
        </div>

        <div class="mb-4">
          <%= f.label :contact_number, class: "block text-gray-700 font-bold mb-2"  %>
          <%= f.text_field :contact_number, class: 'form-control', style: 'border: 1px solid #ccc; padding: 8px; width: 100%;' %>
        </div>

         <div class="mb-4">
          <%= f.label :SMS_NO, class: "block text-gray-700 font-bold mb-2"  %>
          <%= f.text_field :sms_no, class: 'form-control', style: 'border: 1px solid #ccc; padding: 8px; width: 100%;' %>
        </div>

        <div class="mb-4">
          <%= f.label :Recu_for_next, class: "block text-gray-700 font-bold mb-2"  %>
          <%= f.text_field :rec_next, class: 'form-control', style: 'border: 1px solid #ccc; padding: 8px; width: 100%;' %>
        </div>
 
  

      <div class="mb-4">
        <%= f.submit 'Confirm', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' , style: 'background-color: #3490dc; cursor: pointer;'%>
      </div>
    <% end %>
  </div>
</div>



